\newcommand{\simboloalquimista}[1]{
  \draw[fill,yellow] (0,0)+#1 circle (0.15);
  \foreach \x in {0, 45, 90, ..., 360} {
    \draw[fill,gold] (\x:0.25)+#1 circle (0.12);
  }
}

\newcommand{\simbolobruxo}[1]{
  \draw[fill=white] (0,0)+#1 circle (0.4);
  \draw[thin,fill=red] (-0.38,0)+#1 arc (150:30:0.44) arc (330:210:0.44);
  \draw[fill,black] (0,0)+#1 circle (0.10);
}

\newcommand{\simbolomago}[1]{
  \draw[fill=gray] (0,0)+#1 circle (0.4);
  \draw[shift={#1},fill=white,even odd rule] (90:0.35) -- (90+2*72:0.35) -- (90+4*72:0.35) -- 
    (90+1*72:0.35) -- (90+3*72:0.35) -- (90:0.35);
}

\newcommand{\simboloinvocador}[1]{
  \draw[shift={#1},fill=gray] (0,0) circle (0.4);
  \draw[shift={#1},fill=white] (-0.24,-0.24) rectangle (0.24,0.24);
  \foreach \x in {0,90,180,270} {
    \draw[shift={#1},fill,black] (\x:0.3) circle (0.03);
  }
}

\newcommand{\simboloarquimago}[1]{
  \draw[shift={#1},fill] (0,0) circle (0.4);
  \foreach \x in {0,120,240} {
    \shade[ball color=red,shift={#1}] (\x:0.2) circle (0.14);
    \shade[ball color=green,shift={#1},rotate={60}] (\x:0.25) circle (0.08);
  }
  \shade[ball color=blue,shift={#1}] (0,0) circle (0.16);
  %\draw[shift={#1},rotate={360/28}] (0:0.25) -- (360*3/7:0.25) -- (360*6/7:0.25) --
    %(360*9/7:0.25) -- (360*12/7:0.25) -- (360*15/7:0.25) --
    %(360*18/7:0.25) -- (0:0.25);
}

\newcommand{\MedalhaAlquimista}[1]{
  \begin{tikzpicture}[scale=0.7]
    \medaloutline
    \ifnum#1 = 1
      \simboloalquimista{(0,0)}
    \else
      \ifnum#1 = 2
        \simboloalquimista{(0,-0.8)}
        \simboloalquimista{(0,0.8)}
      \else
        \ifnum#1 = 3
          \simboloalquimista{(90:0.8)}
          \simboloalquimista{(210:0.8)}
          \simboloalquimista{(330:0.8)}
        \else
          \simboloalquimista{(0:0.8)}
          \simboloalquimista{(90:0.8)}
          \simboloalquimista{(180:0.8)}
          \simboloalquimista{(270:0.8)}
        \fi
      \fi 
    \fi
  \end{tikzpicture}
}

